<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_functions_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.clemmahe.rxandroidbletest.views.FunctionsDeviceActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/functions_textview_state"
        android:text="@string/functions_text_textview_defaultstate"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/functions_button_connect"
        android:text="@string/functions_text_button_connect"
        android:layout_below="@+id/functions_textview_state"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/functions_button_disconnect"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/functions_button_connect"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/functions_text_button_disconnect"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/functions_button_getsettings"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/functions_button_disconnect"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/functions_text_button_getsettings"/>


</RelativeLayout>
